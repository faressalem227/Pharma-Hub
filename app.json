{
  "expo": {
    "name": "pharmahub",
    "slug": "pharma",
    "version": "1.0.1",
    "icon": "./assets/images/pharmaLogo.png",
    "scheme": "pharma",
    "web": {
      "favicon": "./assets/images/favicon.png",
      "bundler": "metro"
    },
    "experiments": {
      "tsconfigPaths": true,
      "typedRoutes": true
    },
    "plugins": [
      "expo-router",
      "@react-native-firebase/app",
      "@react-native-firebase/messaging",
      "expo-font",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location."
        }
      ]
    ],

    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["assets/*", "!assets/splash.png"],
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/images/pharmaLogo.png"
    },
    "android": {
      "googleServicesFile": "./google-services.json",
      "icon": "./assets/images/pharmaLogo.png",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyD2ocIaSbrcep_fThJSREmAQVqmiO_NxGk"
        }
      },
      "package": "com.amrkhaled222.Pharma",

      "notification": {
        "icon": "./assets/notification-icon.png",
        "color": "#3C9D8D"
      }
    }
  }
}
